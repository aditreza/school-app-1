<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="assets/css/bulma.min.css" type="text/css">
  <link rel="stylesheet" href="assets/css/mystyle.css" type="text/css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css">
  <title>SchoolApp-Subject</title>
</head>
<body>

  <% include assets/partials/nav-bar %>

  <div class="container_subject">
    <div style="text-align:center; margin-bottom:5%;">
      <p class="title is-2">SUBJECT DATA</p>
      <p class="subtitle is-4">show all table subject | <a style="margin-top:0.4%;" class="button is-success is-small" href="/subjects/add">
        <span class="icon">
          <i class="fa fa-user"></i>
        </span>
        <span>add subject</span>
      </a></p>
    </div>

    <table class="table is-bordered is-striped is-narrow is-fullwidth">
      <thead>
        <tr>
          <th>NO</th>
          <th style="text-align:center;">SUB ID</th>
          <th>SUBJECT NAME</th>
          <th style="text-align:center">TEACHER</th>
          <th style="text-align:center;">ACTIONS</th>
          <th style="text-align:center;">OPTIONS</th>
        </tr>
      </thead>
      <tbody>
        <%for(let i=0; i<data_Subjects.length; i++){%>
        <tr>
          <td><%=i+1%></td>
          <td style="text-align:center; font-weight:bold;"><%=data_Subjects[i].id%></td>
          <td><%=data_Subjects[i].subject_name%></td>


          <td>
            <% if(data_Subjects[i].first_name){ %>
              <%for(let j=0; j<data_Subjects[i].first_name.length; j++){%>
                 <%= `${j+1}. ${data_Subjects[i].first_name[j].first_name} ${data_Subjects[i].first_name[j].last_name}` %> <br>
                 <%}%>
            <% } %>
          </td>

          <td style="text-align:center;">
            <p class="field">
              <a class="button is-small" href="#">
                <span class="icon">
                  <i class="fa fa-graduation-cap"></i>
                </span>
                <span>enroll students</span>
              </a>
            </p>
          </td>
          <td style="text-align:center;">
            <p class="field">
              <a class="button is-small" href="/subjects/edit/<%=data_Subjects[i].id%>">
                <span class="icon">
                  <i class="fa fa-pencil"></i>
                </span>
                <span>update</span>
              </a>
              <a class="button is-small" href="/subjects/delete/<%=data_Subjects[i].id%>" onclick="return confirm('are you sure to delete?!');">
                <span class="icon">
                  <i class="fa fa-trash-o"></i>
                </span>
                <span>delete</span>
              </a>
            </p>
          </td>
        </tr>
        <%}%>
      </tbody>
    </table>
  </div>

</body>
</html>
