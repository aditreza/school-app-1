<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="assets/css/bulma.min.css" type="text/css">
  <link rel="stylesheet" href="assets/css/mystyle.css" type="text/css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css">
  <title>SchoolApp-Students</title>
</head>
<body>

  <% include assets/partials/nav-bar %>

  <div class="container">
    <div style="text-align:center; margin-bottom:8%;">
      <p class="title is-2">STUDENTS DATA</p>
      <p class="subtitle is-4">show all table students</p>
    </div>

    <table class="table is-bordered is-striped is-narrow is-fullwidth">
      <thead>
        <tr>
          <th>ID</th>
          <th>FULLNAME</th>
          <th>EMAIL</th>
          <th>OPTIONS</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i=0; i<data_Students.length; i++){%>
        <tr>
          <td><%=data_Students[i].id%></td>
          <td><%=data_Students[i].getFullname()%></td>
          <td><%=data_Students[i].email%></td>
          <td>
            <p class="field">
              <a class="button is-small" href="/students/edit/<%=data_Students[i].id%>">
                <span class="icon">
                  <i class="fa fa-pencil"></i>
                </span>
                <span>update</span>
              </a>
              <a class="button is-small" href="/students/delete/<%=data_Students[i].id%>" onclick="return confirm('are you sure to delete?!');">
                <span class="icon">
                  <i class="fa fa-trash-o"></i>
                </span>
                <span>delete</span>
              </a>
            </p>
          </td>
        </tr>
        <%}%>
      </tbody>
    </table>

    <div style="text-align:center; margin-top:8%;">
      <p class="field">
        <a class="button is-success is-fullwidth" href="/students/add">
          <span class="icon">
            <i class="fa fa-user"></i>
          </span>
          <span>add student</span>
        </a>
      </p>
    </div>


  </div>
</body>
</html>
